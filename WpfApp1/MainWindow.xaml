<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="CryptoCurrency App" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox Grid.Row="0" Margin="10" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Currency List -->
        <ListView Grid.Row="1" ItemsSource="{Binding FilteredCurrencies}" SelectedItem="{Binding SelectedCurrency}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}" />
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" />
   
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Detail View -->
        <Frame Grid.Row="2" Name="NavigationFrame" />
    </Grid>

</Window>
